@model IEnumerable<VotoElectronico.Models.tbEstadosCivil>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Estados Civil</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>
                    <th>
                        ID Estado Civil
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>
<!-- Modales-->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3; ">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Estado Civil</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Estado Civil</label>
                            <input class="form-control" type="text" maxlength="50" id="nombreEstadoCivil" />
                            <label class="text-danger" id="errorMessage1"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarEstadoCivil('Nuevo');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3; ">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Estados Civil</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Estado Civil</label>
                            <input class="form-control" type="text" maxlength="50" id="nombreEstadoCivilEdit" />
                            <input type="hidden" maxlength="50" id="idEstadoCivilEdit" />
                            <label class="text-danger" id="errorMessage1"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarEstadoCivil('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modaldetalles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Detalles Estado Civil</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">ID Estado Civil:</label>
                            <label class="control-label" id="idEstadoCivildetalle"></label>
                            <br />
                            <label class="control-label">Estado Civil: </label>
                            <label class="control-label" id="nombreEstadoCivildetalle"></label>
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>

            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Estado Civil</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="eliminarId">
                            <input type="hidden" id="eliminarEstadoCivil">
                            <p>¿Estas Seguro que quieres eliminar?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary waves-effect waves-light" id="btnSi" data-dismiss="modal">Confirmar</button>


            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Content/js/app/seguridad/estados-civil.js"></script>

    <script src="~/Content/js/app/seguridad/list-estados-civil.js"></script>

    <script>
        VotoElectronicoConfig.Componentes.configureTable({ listUrl: "@Url.Action("ListEstadoCivil")" });

    </script>
}


