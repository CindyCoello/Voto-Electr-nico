@model IEnumerable<VotoElectronico.Models.tbDepartamentos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Departamentos</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>
                    <th>
                        ID Departamento
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>


<!-- Modales-->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3; ">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Departamentos</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">ID Departamento</label>
                            <input class="form-control" type="text" maxlength="50" id="idDepartamento" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Departamento</label>
                            <input class="form-control" type="text" maxlength="50" id="nombredepartamento" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarDepartamento('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3; ">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Departamento</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">


                            <label class="control-label">ID Departamento</label>
                            <input class="form-control" type="text" maxlength="50" id="idDepartamentoEdit" />
                            <label class="text-danger" id="errorMessage1"></label>

                            <label class="control-label">Nombre Departamento</label>
                            <input class="form-control" type="text" maxlength="50" id="nombredepartamentoEdit" />
                            <input type="hidden" maxlength="50" id="idEditar" />

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="mytabla" onclick="GuardarDepartamento('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Departamento</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="eliminarId">
                            <input type="hidden" id="eliminarDepartamento">
                            <p>¿Estas Seguro que quieres eliminar?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarDepartamento('Eliminar');">Confirmar</button>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/departamento.js"></script>
    <script src="~/Content/js/app/seguridad/list-departamentos.js"></script>

    <script>
        VotoElectronicoConfig.Componentes.configureTable({listUrl: "@Url.Action("ListDepartamentos")"});

    </script>
}


