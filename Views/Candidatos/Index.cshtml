@model IEnumerable<VotoElectronico.Models.tbCandidatos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Candidatos</h3></div>
        @*<button class="btn btn-primary" id="btnNuevo"><i class="mdi mdi-plus-thick"></i>Nuevo</button>*@
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>

                    <th>
                        ID Candidato
                    </th>
                    <th>
                        Partidos
                    </th>
                    <th>
                        Movimientos
                    </th>

                    <th>
                        Tipo Candidatos
                    </th>
                    <th>
                        Senso Electoral
                    </th>
                    <th>
                        Departamento
                    </th>
                    <th>
                        Municipio
                    </th>
                    <th>
                        Posición
                    </th>

                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Candidatos</h5>

            </div>
            <div class="modal-body">

                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Partidos</label>
                            <select id="part_Id" class="form-control">
                                <option>Seleccione un Partido</option>
                            </select>


                            <label class="control-label">Movimientos</label>
                            <select id="mov_Id" class="form-control">
                                <option>Seleccione un Movimineto</option>
                            </select>



                        </div>
                    </div>
                </div>


                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Tipo Candidato</label>
                            <select id="tipcan_Id " class="form-control">
                                <option>Seleccione el Tipo Candidato</option>
                            </select>


                            <label class="control-label"> Centro Electoral</label>
                            <select id="censo_Id" class="form-control">
                                <option>Seleccione un  Centro Electoral</option>
                            </select>



                        </div>
                    </div>
                </div>


                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Departamento</label>
                            <select id="depto_Id" class="form-control">
                                <option>Seleccione un departamento</option>
                            </select>


                            <label class="control-label">Municipio</label>
                            <select id="muni_Id" class="form-control">
                                <option>Seleccione un Municipio</option>
                            </select>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">Candidato Posición</label>
                                    <input class="form-control" type="text" maxlength="50" id="cand_Posicion" />
                                    <label class="text-danger" id="errorMessage"></label>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="GuardarCandidatos('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
                </div>
            </div>
    </div>

</div>




<!-- Modal -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Candidatos</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="hidden" id="cand_IdEdit"/>
                            <label class="control-label">Partidos</label>
                            <select id="part_IdEdit" class="form-control">
                                <option>Seleccione un Partido</option>
                            </select>


                            <label class="control-label">Movimientos</label>
                            <select id="mov_IdEdit" class="form-control">
                                <option>Seleccione un Movimineto</option>
                            </select>



                        </div>
                    </div>
                </div>


                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Tipo Candidato</label>
                            <select id="tipcan_IdEdit" class="form-control">
                                <option>Seleccione el Tipo Candidato</option>
                            </select>


                            <label class="control-label"> Centro Electoral</label>
                            <select id="censo_IdEdit" class="form-control">
                                <option>Seleccione un  Centro Electoral</option>
                            </select>



                        </div>
                    </div>
                </div>


                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Departamento</label>
                            <select id="depto_IdEdit" class="form-control">
                                <option>Seleccione un departamento</option>
                            </select>


                            <label class="control-label">Municipio</label>
                            <select id="muni_IdEdit" class="form-control">
                                <option>Seleccione un Municipio</option>
                            </select>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">Candidato Posición</label>
                                    <input class="form-control" type="text" maxlength="50" id="cand_PosicionEdit" />
                                    <label class="text-danger" id="errorMessage"></label>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarCandidatos('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Candidatos</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>¿Estas Seguro que quieres eliminar?</p>
                            <input type="hidden" id="eliminarcand_Id">
                            <input type="hidden" id="eliminar_part_Id">
                            <input type="hidden" id="eliminarmov_Id">
                            <input type="hidden" id="eliminartipcan_Id">
                            <input type="hidden" id="eliminarcenso_Id">
                            <input type="hidden" id="eliminardepto_Id">
                            <input type="hidden" id="eliminarmuni_Id">
                            <input type="hidden" id="eliminarcand_Posicion">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarCandidatos('Eliminar');">Confirmar</button>


            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/candidatosjs.js"></script>
    <script src="~/Content/js/app/seguridad/list-candidatos.js"></script>
    <script>
        VotoElectronicoConfig.Candidatos.configureTable({ listUrl: "@Url.Action("ListCandidatos")" });

    </script>
}