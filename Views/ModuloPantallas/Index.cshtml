@model IEnumerable<VotoElectronico.Models.tbModuloPantallas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Modulo Pantallas</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>
                    <th>
                        ID Modulo Pantalla
                    </th>
                    <th>
                        Modulo
                    </th>
                    <th>
                        Nombre Pantalla
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>


<!-- Modales-->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3; ">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Modulo Pantallas</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">
                    
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label"> Modulo</label>
                            <select id="mod_Id" class="form-control">
                                <option>Seleccione un Modulo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Pantalla</label>
                            <input class="form-control" type="text" maxlength="50" id="modpan_Nombre" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarModuloPant('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3; ">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Modulos Pantalla</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="hidden" id="modpan_IdEdit">
                            <label class="control-label">ID Modulo</label>
                            <select id="mod_IdEdit" class="form-control">
                                <option>Seleccione un Modulo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Pantalla</label>
                            <input class="form-control" type="text" maxlength="50" id="modpan_NombreEdit" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="mytabla" onclick="GuardarModuloPant('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Modulo Pantallas</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">

                            <p>¿Estas Seguro que quieres eliminar?</p>

                            <input type="hidden" id="modpan_IdEliminar">
                            <input type="hidden" id="modpan_NombreEliminar">
                            <input type="hidden" id="mod_IdEliminar">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarModuloPant('Eliminar');">Confirmar</button>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/modulo-pantallas.js"></script>
    <script src="~/Content/js/app/seguridad/list-modulo-pantallas.js"></script>

    <script>
        VotoElectronicoConfig.ModuloPantalla.configureTable({listUrl: "@Url.Action("ListModuloPantalla")"});

    </script>
}


