@model IEnumerable<VotoElectronico.Models.tbMesasElectorales>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Mesas Electorales</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>
                    <th>
                        ID Mesa Electoral
                    </th>
                    <th>
                        Centro de Votación
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Mesas Electorales</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Centro de Votación</label>
                            <select id="cenvot_Id" class="form-control">
                                <option>Seleccione un Centro de Votaciòn</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarMesasElectorales('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar componente</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Centro de Votaciòn</label>

                            <select id="cenvot_IdEdit" class="form-control">
                                <option>Seleccione un centro de votaciòn</option>
                            </select>

                            <input type="hidden" id="mesa_IdEdit" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarMesasElectorales('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modaldetalles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Detalles de Mesa Electoral</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">ID Mesa Electoral:</label>
                            <label class="control-label" id="mesa_Iddetalle"></label>
                            <br />

                            <label class="control-label">Centro de Votaciòn: </label>
                            <label class="control-label" id="nombreVotaciondetalle"></label>
                            <label class="text-danger" id="errorMessage1"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>

            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Componente</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="eliminarId">
                            <input type="hidden" id="eliminarmesaElect">
                            <p>¿Estas Seguro que quieres eliminar?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarMesasElectorales('Eliminar');">Confirmar</button>


            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/mesas-electorales.js"></script>
    <script src="~/Content/js/app/seguridad/list-mesas-electorales.js"></script>

    <script>
        VotoElectronicoConfig.MesaElectoral.configureTable({ listUrl: "@Url.Action("ListMesaElectoral")" });

    </script>
}
