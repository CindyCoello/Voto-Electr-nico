@model VotoElectronico.Models.tbPartidos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Create</h2*@>

@using (Html.BeginForm("Create", "Partidos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />

    <fieldset>
        <div class="form-horizontal">
            <div class="form-group">

                <label class="control-label"></label>
                <div class="col-md-10">
                    <input type="file" name="LogoFile" class="form-control"/>
                    @Html.ValidationMessageFor(model => model.Logofile, "", new { @class = "text-danger" })
                </div>
            </div>

     

            <div class="editor-label">
                @Html.LabelFor(model => model.part_Nombre)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.part_Nombre, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.part_Nombre)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.part_Siglas)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.part_Siglas, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.part_Siglas)
            </div>


            <div class="editor-label">
                @Html.LabelFor(model => model.part_Sede)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.part_Sede, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.part_Sede)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.part_ColorEmblema)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.part_ColorEmblema, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.part_ColorEmblema)
            </div>

            <br />
            <br />
            <p>
                <input type="submit" value="Guardar"  class="btn btn-outline-primary"/>
            </p>

        </div>


    </fieldset>
}
