@model IEnumerable<VotoElectronico.Models.tbMunicipios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Municipios</h3></div>
        @*<button class="btn btn-primary" id="btnNuevo"><i class="mdi mdi-plus-thick"></i>Nuevo</button>*@
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>

                    <th>
                        ID Municipio
                    </th>
                    
                    <th>
                        Nombre Municipio
                    </th>

                    <th>
                        Nombre Departamento
                    </th>

                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Municipios</h5>

            </div>
            <div class="modal-body">

                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">ID Municipio</label>
                            <input class="form-control" type="text" maxlength="50" id="muni_Codigo" />

                            <label class="text-danger" id="errorMessage"></label>

                        </div>
                    </div>



                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Municipio</label>
                            <input class="form-control" type="text" maxlength="50" id="descripcionMunicipio" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Departamento</label>
                            <select id="depto_Id" class="form-control">
                                <option>Seleccione un departamento</option>
                            </select>


                        </div>
                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarMunicipios('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>

</div>




<!-- Modal -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Municipios</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">ID Municipio</label>
                            <input class="form-control" type="text" maxlength="50" id="muni_CodigoEditar" />
                            <label class="text-danger" id="errorMessage"></label>
                            <input type="hidden" maxlength="50" id="muni_IdEditar" />
                        </div>
                    </div>

                </div>

                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Municipio</label>
                            <input class="form-control" type="text" maxlength="50" id="descripcionMunicipioEditar" />
                            
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                           
                            <label class="control-label">Departamento</label>
                            <select id="depto_IdEditar" class="form-control">
                                <option>Seleccione un departamento</option>
                            </select>


                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarMunicipios('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Municipios</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>¿Estas Seguro que quieres eliminar?</p>

                            <input type="hidden" id="eliminarMuni_Id">
                            <input type="hidden" id="eliminar_muni_Codigo">
                            <input type="hidden" id="eliminarNombreMunicipio">
                            <input type="hidden" id="eliminaridDepartamento">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnEliminar" onclick="GuardarMunicipios('Eliminar');">Confirmar</button>


            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/municipios.js"></script>
    <script src="~/Content/js/app/seguridad/list-municipios.js"></script>

    <script>
        VotoElectronicoConfig.Municipios.configureTable({ listUrl: "@Url.Action("ListMunicipios")" });

    </script>
}