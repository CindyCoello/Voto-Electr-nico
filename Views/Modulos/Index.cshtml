@model IEnumerable<VotoElectronico.Models.tbModulos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Modulos</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>
                    <th>
                        ID Modulo
                    </th>
                    <th>
                        Nombre Componente
                    </th>
                    <th>
                        Nombre Modulo
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Modulo</h5>

            </div>
            <div class="modal-body">
               

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Componente</label>
                            <select id="comp_Id" class="form-control">
                                <option>Seleccione un Componente</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Modulo</label>
                            <input class="form-control" type="text" maxlength="50" id="mod_Nombre" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarModulo('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Modulo</h5>

            </div>
            <div class="modal-body">
               
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="mod_IdEdit">
                            <label class="control-label">Nombre Componente</label>
                            <select id="comp_IdEdit" class="form-control">
                                <option>Seleccione un Componente</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Modulo</label>
                            <input class="form-control" type="text" maxlength="50" id="mod_NombreEdit" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarModulo('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Modulo</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="mod_IdEliminar">
                            <input type="hidden" id="mod_NombreEliminar">
                            <p>¿Estas Seguro que quieres eliminar?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarModulo('Eliminar');">Confirmar</button>


            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/modulo.js"></script>
    <script src="~/Content/js/app/seguridad/list-modulo.js"></script>

    <script>
        VotoElectronicoConfig.Modulo.configureTable({ listUrl: "@Url.Action("ListModulos")" });

    </script>
}
