@model IEnumerable<VotoElectronico.Models.tbAldeas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Aldeas</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead>
                <tr>
                    <th>
                        ID Aldea
                    </th>
                    <th>
                        Nombre Aldea
                    </th>
                    <th>
                        Departamento
                        
                    </th>
                    <th>
                        Municipio
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalNuevo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Crear Aldeas</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Aldea</label>
                            <input class="form-control" type="text" maxlength="50" id="nombreALdea" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>

                </div>

                <div class="form-row">



                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Departamento</label>
                            <select id="depto_Id" class="form-control">
                                <option>Seleccione un departamento</option>
                            </select>


                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Municipio</label>

                            <select id="muni_Id" class="form-control">
                                <option>Seleccione un Municipio</option>
                            </select>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarAldeas('Guardar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Editar Aldea</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Aldea</label>
                            <input class="form-control" type="text" maxlength="50" id="nombreALdeaEditar" />
                            <input type="hidden" maxlength="50" id="idAldeasEdit" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>

                </div>
                
                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Municipio</label>
                            <select id="idMunicipioEditar" class="form-control">
                                <option>Seleccione un Minicipio</option>
                            </select>

                            <label class="text-danger" id="errorMessage"></label>

                            <input type="hidden" maxlength="50" id="idAldeasEdit" />

                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Departamento</label>
                           
                            <select id="idDepartamentoEditar" class="form-control">
                                <option>Seleccione un departamento</option>
                            </select>
                            <label class="text-danger" id="errorMessage"></label>

                           

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarAldeas('Editar');"><i class="mdi mdi-content-save"></i>Guardar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modaldetalles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3051d3;">
                <h5 class="modal-title" style="color:white " ; id="exampleModalLabel">Detalles Componente</h5>

            </div>
            <div class="modal-body">
                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">ID Aldea</label>
                            <input class="form-control" type="text" maxlength="50" id="idALdeaDetalle" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Nombre Aldea</label>
                            <input class="form-control" type="text" maxlength="50" id="nombreALdeaDetalle" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>

                </div>

                <div class="form-row">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Municipio</label>
                            <input class="form-control" type="text" maxlength="50" id="idMunicipioDetalle" />
                            <label class="text-danger" id="errorMessage"></label>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Departamento</label>
                            <input class="form-control" type="text" maxlength="50" id="idDepartamentoDetalle" />
                            <label class="text-danger" id="errorMessage"></label>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>

            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalEliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Aldeas</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="eliminarId">
                            <input type="hidden" id="eliminarNombreAldea">
                            <input type="hidden" id="eliminarMunicipio">
                            <input type="hidden" id="eliminarDepartamento">
                            <p>¿Estas Seguro que quieres eliminar?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarAldeas('Eliminar');"><i class="mdi mdi-content-save"></i>Confirmar</button>


            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Content/js/app/seguridad/aldeas.js"></script>
    <script src="~/Content/js/app/seguridad/list-aldeas.js"></script>

    <script>
        VotoElectronicoConfig.Aldeas.configureTable({ listUrl: "@Url.Action("ListAldeas")" });

    </script>
}


